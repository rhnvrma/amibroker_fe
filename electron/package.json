{
  "name": "amibroker-electron",
  "version": "1.0.0",
  "main": "electron.js",
  "scripts": {
    "dev": "electron .",
    "start": "electron .",
    "pack": "electron-builder"
  },
  "devDependencies": {
    "electron": "^26.2.0",
    "electron-builder": "^24.6.0",
    "electron-is-dev": "^2.0.0"
  },
  "build": {
  "appId": "com.amibroker.app",
  "productName": "Amibroker_FE",
  "files": [
    "**/*",
    "../download/out/**/*"
  ],
  "directories": {
    "output": "dist"
  },
  "win": { "target": "nsis" },
  "mac": { "target": "dmg" },
  "linux": { "target": "AppImage" }
}

}
